    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_buy_stock"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--</me.dkzwm.widget.srl.SmoothRefreshLayout>-->

</LinearLayout>