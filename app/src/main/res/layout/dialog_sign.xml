<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_sign_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sign_title">

            <ImageView
                android:id="@+id/iv_close_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:src="@drawable/pinglun_guanbi_xhdpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:text="@string/sign_rules"
                android:textColor="#ccffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_sign_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <TextView
                android:id="@+id/tv_month1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February"
                android:textColor="#CC999999"
                android:textSize="14dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_month2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_month3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April"
                android:textColor="#CC999999"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/SUN"
                android:textColor="#CC999999"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/MON"
                android:textColor="#CC999999"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/TUE"
                android:textColor="#CC999999"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/WED"
                android:textColor="#CC999999"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/THU"
                android:textColor="#CC999999"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/FRI"
                android:textColor="#CC999999"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/SAT"
                android:textColor="#CC999999"
                android:textSize="11dp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_date"
            android:layout_width="270dp"
            android:overScrollMode="never"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2.5dp" />
    </LinearLayout>

</FrameLayout>