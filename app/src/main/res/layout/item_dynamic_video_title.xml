<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_marginTop="9.5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_dynamic_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_dynamic_title"
        android:layout_marginLeft="13.5dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            fresco:placeholderImage="@drawable/base_head"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            android:id="@+id/sdv_user_avatar"
            android:layout_width="38.5dp"
            android:layout_height="38.5dp"
            fresco:actualImageScaleType="focusCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/F2F2F2"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text=""
                android:textColor="@color/CCCCCC"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dynamic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dynamic_user"
        android:layout_marginLeft="13.5dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@color/F2F2F2"
        android:textSize="13sp"/>

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/play_dynamic"
        android:layout_width="match_parent"
        android:layout_height="184.5dp"
        android:layout_below="@+id/tv_dynamic_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="17dp"/>

</LinearLayout>