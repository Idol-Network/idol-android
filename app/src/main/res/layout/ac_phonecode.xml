<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_register_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_code_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18.5dp"
        android:padding="15dp"
        android:src="@drawable/fanhui"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47.5dp"
            android:text="@string/enter_confirmation_code"
            android:textColor="@color/EEEEEE"
            android:textSize="23sp"/>

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47.5dp"
            android:layout_marginRight="47.5dp"
            android:layout_marginTop="13.5dp"
            android:textColor="@color/EEEEEE"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_code_num"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="28.5dp"
            android:background="@null"
            android:hint="@string/confirmation_code"
            android:inputType="number"
            android:maxLength="4"
            android:singleLine="true"
            android:textColor="@color/DDDDDD"
            android:textColorHint="@color/DDDDDD"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginRight="47.5dp"
            android:background="@color/CCCCCC"/>

        <TextView
            android:id="@+id/tv_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="7dp"
            android:text="@string/code_valid"
            android:textColor="@color/DE3D41"
            android:textSize="13sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/bt_code_next"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="66.5dp"
            android:layout_marginRight="66.5dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bt_signup_shape"
            android:maxLines="1"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_phonereg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="@string/login_1"
        android:textColor="@color/CCCCCC"
        android:textSize="13sp"/>
</RelativeLayout>