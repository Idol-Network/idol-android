<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_register_shape"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="215dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/newldol"/>

        <Button
            android:id="@+id/bt_login_phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="44.5dp"
            android:background="@drawable/bt_login_shape"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <Button
            android:layout_marginTop="13.5dp"
            android:id="@+id/bt_login_signup"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:background="@drawable/bt_signup_shape"
            android:text="@string/signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:layout_marginTop="47.5dp"
            android:id="@+id/tv_login_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_2"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="20.5dp"
            android:id="@+id/ll_login_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp">

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/bt_login_shape"
                android:scaleType="center"
                android:src="@drawable/denglu_weixi"/>

            <ImageView
                android:id="@+id/iv_sina"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8.5dp"
                android:background="@drawable/bt_login_shape"
                android:scaleType="center"
                android:src="@drawable/denglu_weibo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20.5dp"
            android:id="@+id/ll_login_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/bt_login_shape"
                android:scaleType="center"
                android:src="@drawable/denglu_facebook"/>

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8.5dp"
                android:background="@drawable/bt_login_shape"
                android:scaleType="center"
                android:src="@drawable/denglu_twitter"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="@string/login_1"
        android:textColor="@color/white"
        android:textSize="13sp"/>
</RelativeLayout>