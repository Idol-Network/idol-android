<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <com.yiju.idol.ui.view.BackgroundProgress
        android:id="@+id/back_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_left_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=" "
        android:textColor="@color/s9"
        android:textSize="12sp"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_buy_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_left_index"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/color_currency_down"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" "
            android:textColor="@color/color_currency_up"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_sell_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/tv_right_index"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_right_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/s9"
        android:textSize="12sp"/>

</RelativeLayout>