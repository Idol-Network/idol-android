<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_clinchdeal_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="15:35:20"
        android:textColor="@color/white"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_clinchdeal_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="卖出"
        android:textColor="#FFFD2E42"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_clinchdeal_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0.355503"
        android:textColor="@color/white"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_clinchdeal_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2623001"
        android:textColor="@color/white"
        android:textSize="13sp"/>
</LinearLayout>