            <!--android:text="@string/follow"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/size_s_13"-->
            <!--android:visibility="gone" />-->
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_audience"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_close"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_applause_num"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/bg_av_applause"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/zhangshegnxiangyou"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="5dp"
            android:text="掌声 0"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_star_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:shadowColor="@color/s3"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

