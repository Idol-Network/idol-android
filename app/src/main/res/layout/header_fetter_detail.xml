<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_pic"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        fresco:actualImageScaleType="fitXY"
        fresco:failureImage="@drawable/bg_base_pic"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/bg_base_pic"
        fresco:placeholderImageScaleType="fitXY" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/tuji_jianbian"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dianzan_da_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_num_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_num_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:drawableLeft="@drawable/pl_da"
            android:drawablePadding="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/xiaozai_xhdpi" />

    </LinearLayout>

</FrameLayout>