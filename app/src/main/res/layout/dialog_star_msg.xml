<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="317dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/dhk_1_xhdpi"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="17dp"
            android:paddingLeft="19.5dp"
            android:textColor="@color/transparent"
            android:paddingRight="19.5dp"
            android:paddingTop="15.5dp"
            android:textSize="11dp" />

        <com.yiju.idol.ui.view.TyperTextView
            android:id="@+id/tv_msg"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="17dp"
            android:paddingLeft="19.5dp"
            android:paddingRight="19.5dp"
            android:paddingTop="15.5dp"
            android:textColor="#111010"
            android:textSize="11dp" />


        <TextView
            android:id="@+id/tv_star_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/duihuak_btxhdpi"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/tiaoguo_xhdpi"
        android:gravity="center"
        android:text="@string/main_act_next"
        android:textColor="@color/white" />

</FrameLayout>