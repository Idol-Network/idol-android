<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/phone_register_shape"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_addfollow_title"
        android:layout_width="match_parent"
        android:layout_height="42.5dp">

        <!--<ImageView-->
            <!--android:id="@+id/iv_addfollow_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:padding="10dp"-->
            <!--android:src="@drawable/fanhui"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/addfollow"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/titleTextSize"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_addfollow_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabBackground="@color/alpha40_191919"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/c8C5FFF"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/c8C5FFF"
        app:tabTextColor="@color/EEEEEE"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_addfollow_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/add_follow_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:overScrollMode="never"
            android:paddingRight="100dp"
            android:id="@+id/rv_addfollow_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:foreground="@drawable/recyclerview_shape"/>

        <Button
            android:id="@+id/bt_addfollow_yes"
            android:layout_width="81dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/bt_yes_shape"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>
