                <TextView
                    android:id="@+id/tv_time4"
                    style="@style/TextHeaderBuyStock"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_price4"
                    style="@style/TextHeaderBuyStockSale"
