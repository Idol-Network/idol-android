<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_register_shape"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="215dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/newldol"/>

        <LinearLayout
            android:id="@+id/ll_phone_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_phonereg_1"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phonereg_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/country_region"
                    android:textColor="@color/EEEEEE"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_phonereg_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14.5dp"
                    android:layout_toRightOf="@+id/tv_phonereg_1"
                    android:gravity="center_vertical"
                    android:text="China"
                    android:textColor="@color/EEEEEE"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/xuanze_diqu"/>
            </RelativeLayout>

            <View
                android:id="@+id/view_login_3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@color/s6"/>

            <LinearLayout
                android:id="@+id/ll_phonereg_1"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="@color/DDDDDD"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@null"
                    android:hint="@string/phonenumber"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/DDDDDD"
                    android:textColorHint="@color/s9"/>
            </LinearLayout>


            <View
                android:id="@+id/view_login_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@color/s6"/>

            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/s9"/>

            <View
                android:id="@+id/view_login_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@color/s6"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47.5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@null"
                android:hint="@string/email"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/DDDDDD"
                android:textColorHint="@color/s9"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@color/s6"/>

            <EditText
                android:id="@+id/et_email_pwd"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/s9"/>

            <View
                android:id="@+id/view_login_5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="39.5dp"
                android:layout_marginRight="39.5dp"
                android:background="@color/s6"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_switch_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="39.5dp"
            android:layout_marginRight="39.5dp"
            android:padding="5dp"
            android:text="@string/email_login"
            android:textColor="@color/s9"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/bt_login_signup"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10.5dp"
            android:layout_marginLeft="58.5dp"
            android:layout_marginRight="58.5dp"
            android:background="@drawable/bt_signup_shape"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_login_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="82dp"
            android:gravity="center_horizontal"
            android:text="@string/phonelogin_1"
            android:textColor="@color/CCCCCC"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="@string/login_1"
        android:textColor="@color/white"
        android:textSize="13sp"/>
</RelativeLayout>