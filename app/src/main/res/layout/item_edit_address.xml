<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sml_content"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    fresco:ios="true">

    <FrameLayout
        android:id="@+id/fl_edit_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/cb_address_n" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44.5dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="44.5dp"
            android:layout_marginRight="36dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/s9"
            android:textSize="14dp" />

        <View
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow_order" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="77dp"
        android:layout_height="match_parent"
        android:background="#8C5FFF"
        android:gravity="center"
        android:text="@string/item_delete"
        android:textColor="@color/white"
        android:textSize="@dimen/titleTextSize" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>